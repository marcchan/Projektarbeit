%% ----------------------------------------------------
%% Definition for Big letter at the beginning 
%% of a paragraph (similar to IEEE style file)
%% ----------------------------------------------------

\def\ParStart#1#2{\begingroup\def\par{\endgraf\endgroup\lineskiplimit=0pt}
    \setbox2=\hbox{#2 }\newdimen\tmpht \tmpht \ht2      % Koch ParStart
    %\setbox2=\hbox{\uppercase{#2}}\newdimen\tmpht \tmpht \ht2 % original IEEE PARstart
    \advance\tmpht by \baselineskip\font\hhuge=cmr10 at \tmpht
    \setbox1=\hbox{{\hhuge #1}}
    \count7=\tmpht \count8=\ht1\divide\count8 by 1000 \divide\count7 by\count8
    \tmpht=.001\tmpht\multiply\tmpht by \count7\font\hhuge=cmr10 at \tmpht
    \setbox1=\hbox{{\hhuge #1}} \noindent \hangindent1.05\wd1
    \hangafter=-2 {\hskip-\hangindent \lower1\ht1\hbox{\raise1.0\ht2\copy1}%
    \kern-0\wd1}\copy2\lineskiplimit=-1000pt}


